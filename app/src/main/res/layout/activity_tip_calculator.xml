<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="Bill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewBill"
                    android:textStyle="bold"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editTextBill"
                    android:layout_weight="1" />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/spinnertaxvalue"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editText1bill"
                        android:layout_weight="1" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="Tip(%)   "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewTip"
                android:textStyle="bold"
                android:layout_weight="1"/>


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextTip"
                android:layout_weight="1" />
            <ImageButton
                android:text="-"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/buttonReset"

                android:background="@drawable/minus"
                android:layout_weight="1" />
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/buttonPlus"
                android:background="@drawable/plus"
                android:layout_weight="1" />
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/buttonSetting"
                android:src="@drawable/setting"
                android:layout_weight="1" />
         </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="Split      "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewTip1"
                    android:textStyle="bold"
                    android:layout_weight="1"/>


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editTextTip1"
                    android:layout_weight="1" />
                <ImageButton
                    android:text="-"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:id="@+id/buttonReset1"

                    android:background="@drawable/minus"
                    android:layout_weight="1" />
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:id="@+id/buttonPlus1"
                    android:background="@drawable/plus"
                    android:layout_weight="1" />
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:id="@+id/buttonSetting1"
                    android:src="@drawable/setting"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
        </ScrollView>
    </LinearLayout>
